<!-- Cart -->
<style>
    .qty {
        position: absolute;
        right: 15px;
        top: -10px;
        width: 20px;
        height: 20px;
        line-height: 20px;
        text-align: center;
        border-radius: 50%;
        font-size: 10px;
        color: #FFF;
        background-color: #D10024;
    }
</style>
<div class="dropdown">
    @if (Session["TaiKhoans"] != null && Session["TaiKhoans"].ToString() != "")
    {
        using (Html.BeginForm("XemGioHang", "GioHang", FormMethod.Post, new { @class = "class" }))
        {
            <a Class="dropdown-toggle" style="display: block; position: relative; width: 90px; text-align: center; color: #fff" >
                <i Class="fa fa-shopping-cart" style="display: block; font-size: 18px"></i>
                <span style=" font-size: 12px;"> Giỏ Hàng</span>
                <div Class="qty">@ViewBag.Count</div>
            </a>
        }
    }
    else
    {
        <a class="dropdown-toggle" onclick="redirectToLoginPage()">
            <i class="fa fa-shopping-cart"></i>
            <span>Giỏ Hàng</span>
            <div class="qty">@ViewBag.Count</div>
        </a>
    }
</div>
<!-- /Cart -->
<script>
    function redirectToLoginPage() {
        window.location.href = '@Url.Action("DangNhap", "Login")'; // Chuyển hướng đến trang đăng nhập
    }
</script>