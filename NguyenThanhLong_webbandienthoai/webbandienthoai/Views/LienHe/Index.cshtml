
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    /* Phần tiêu đề "Liên hệ chúng tôi" */
    .contact .tittle {
        font-size: 2.5em;
        text-align: center;
        margin-bottom: 50px;
        position: relative;
    }

        .contact .tittle .heading-style {
            position: absolute;
            bottom: -20px;
            left: 50%;
            transform: translateX(-50%);
            display: flex;
        }

            .contact .tittle .heading-style i {
                display: block;
                width: 30px;
                height: 2px;
                background: #000;
                margin: 0 10px;
                position: relative;
            }

    /* Phần form liên hệ */
    .contact {
        font-size: 16px;
    }

    .contact .contact-form {
        margin-top: 50px;
        background: #fff;
        padding: 30px;
        border-radius: 5px;
        box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
    }

        .contact .contact-form input[type="text"],
        .contact .contact-form input[type="email"],
        .contact .contact-form textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            margin-bottom: 20px;
            box-sizing: border-box;
        }

        .contact .contact-form textarea {
            width: 100%;
            height: 190px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            margin-bottom: 20px;
            box-sizing: border-box;
        }

        .contact .contact-form input[type="submit"] {
            background: #ff6a00;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }

            .contact .contact-form input[type="submit"]:hover {
                background: #b53014;
                color: #fff;
                border: none;
                padding: 10px 20px;
                border-radius: 5px;
                cursor: pointer;
            }

    .contact .contact-right {
        margin-top: 50px;
    }

        .contact .contact-right .contact-text {
            padding-left: 0;
        }

            .contact .contact-right .contact-text p {
                margin-bottom: 15px;
            }

                .contact .contact-right .contact-text p i {
                    margin-right: 10px;
                    color: red;
                }

        .contact .contact-right img {
            width: 100%;
            border-radius: 5px;
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
        }
</style>
