@using webbandienthoai.Models
@model IEnumerable<SanPham>

<!-- aside Widget -->
<div class="aside">
    <h3 class="aside-title">Hãng</h3>
    <div class="checkbox-filter">
        @foreach (var groupitem in Model.GroupBy(n => n.LoaiSanPham.DanhMuc))
        {
            if (groupitem.Key != null)
            {
            <ul>
                @foreach (var gritem in groupitem.GroupBy(n => n.NhaSanXuat))
                {
                    if (gritem.Key != null)
                    {
                        <li style="margin: 10px 10px"><a href="@Url.Action("hienThiLoaiSP", "SanPham", new { MaNSX = @gritem.Key.MaNSX })">@gritem.Key.TenNSX</a></li>
                    }
                }
            </ul>
            }
        }
    </div>
</div>
<!-- /aside Widget -->
