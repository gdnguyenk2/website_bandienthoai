<style>
    .terms-of-use {
        padding: 0;
        font-size: 18px;
    }

        .terms-of-use .container {
            max-width: 1000px;
            margin: 0 auto;
        }

        .terms-of-use .tittle {
            font-size: 2.0em;
            text-align: center;
            margin-bottom: 50px;
            position: relative;
        }

            .terms-of-use .tittle .heading-style {
                position: absolute;
                bottom: -20px;
                left: 50%;
                transform: translateX(-50%);
                display: flex;
            }

                .terms-of-use .tittle .heading-style i {
                    display: block;
                    width: 30px;
                    height: 2px;
                    background: #000;
                    margin: 0 10px;
                    position: relative;
                }

        .terms-of-use h6 {
            font-size: 1.2em;
            font-weight: bold;
            margin-top: 30px;
        }

        .terms-of-use p {
            margin-bottom: 20px;
            font-size: 1em;
        }

        .terms-of-use h6[style="font-style: italic; font-size:18px "] {
            font-size: 1.2em;
            font-style: italic;
        }

        .terms-of-use h6[style="font-weight: bold; font-style: italic; text-decoration: underline; "] {
            font-size: 1.2em;
            font-weight: bold;
            font-style: italic;
            text-decoration: underline;
        }

        .terms-of-use p[style="font-size: 18px; font-style: italic; "] {
            font-size: 1em;
            font-style: italic;
        }
</style>
