
@{
    ViewBag.Title = "Quan ly nha san xuat";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
    //khởi tạo control webgrid
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 6);
}
<style>
    .Footer {
        height: 100px;
    }

        .Footer a {
            display: inline-block;
            text-decoration: none;
            border: 2px solid #808080;
            color: #ffffff;
            background: #2987f0;
            padding: 5px 10px;
        }

    .Table, th, tr, td {
        text-align: center;
        border: 1px solid #000000;
        font-size: 16px;
        padding: 5px 10px;
    }

    .Table {
        width: 100%;
    }

    .Header {
        background-color: #e6dada;
    }

    img {
        width: 160px;
        height: 120px;
    }
</style>

<h2 style="margin:10px 0">Quản Lý Nhà Sản Xuất</h2>
<div class="clearfix"></div>
<br />
@Html.ActionLink("Thêm Nhà Sản Xuất", "ThemNhaSanXuat", null, new { @class = "btn btn-success" })
<div class="clearfix"></div>
<br />
<br />
@grid.GetHtml(
    tableStyle: "Table",
    headerStyle: "Header",
    footerStyle: "Footer",
    rowStyle: "Row",
    alternatingRowStyle: "gridAltRow",
    columns: grid.Columns(
    grid.Column("MaNSX", "Mã NSX"),
    grid.Column("TenNSX", "Tên NSX"),
    grid.Column("ThongTin", "Thông tin", format: p =>@Html.Raw(p.ThongTin)),
    grid.Column("Logo", "Logo", format: p => @Html.Raw("<img src=\"../Content/Images/ProductLogos/" + p.Logo + "\">"))
    )
)
<script>
    $(document).ready(function () {
        var themnsx = '@Html.Raw(HttpUtility.JavaScriptStringEncode((string)TempData["themnsx"]))';// HttpUtility.JavascriptStringEncode để đảm báo mã hóa chuỗi an toàn khi dùng các ký tự đặc biệt
        console.log(themnsx);
        if (themnsx) {
            alert(themnsx);
        }
    });
</script>

