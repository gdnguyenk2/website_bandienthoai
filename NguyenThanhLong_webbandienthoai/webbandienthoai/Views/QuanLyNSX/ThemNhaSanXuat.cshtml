@model webbandienthoai.Models.NhaSanXuat

@{
    ViewBag.Title = "Thêm Nhà sản xuất";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
@*Text mota*@
<script src="~/Content_Admin/js/tinymce/tinymce.min.js"></script>
<!--
  Note: This tab only shows the initial HTML and is not updated as you type or
  when you click submit.
-->
<script>
    tinymce.init({
        selector: 'textarea#default-editor'
    });
</script>
<h2>Quản Lý Nhà Sản Xuất/Thêm Nhà Sản Xuất</h2>

@using (Html.BeginForm("ThemNhaSanXuat", "QuanLyNSX", FormMethod.Post, new { @enctype = "multipart/form-data", @id = "themnsx" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Thêm Nhà Sản Xuất</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.TenNSX, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenNSX, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenNSX, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ThongTin, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.ThongTin, new { @class = "form-control",@rows="4" })
            @Html.ValidationMessageFor(model => model.ThongTin, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Logo, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="file" name="Logo" />
            @Html.ValidationMessageFor(model => model.Logo, "", new { @class = "text-danger" })
            <span style="color:red">@ViewBag.upload</span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <a href="@Url.Action("Index", "QuanLyNSX")" class="btn btn-danger">Quay lại</a>
            <input type="submit" value="Thêm Mới" class="btn btn-success" />
        </div>
    </div>
</div>
}