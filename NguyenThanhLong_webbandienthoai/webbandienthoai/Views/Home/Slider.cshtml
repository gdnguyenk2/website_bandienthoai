@using webbandienthoai.Models
@model IEnumerable<QuangCao>
<!-- HOT DEAL SECTION -->
<!-- container -->
<div class="container" style="width:100%;height:530px">
    <!-- row -->
    <div class="row">
        <div class="col-md-12">
            <div id="myCarousel" class="carousel slide">
                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    @foreach (var item in Model)
                    {
                        <div class="item">
                            <img src="@Url.Content("~/Content/Images/Banners/"+item.HinhAnh)" alt="" style="min-width:100%;height:530px">
                        </div>
                    }
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
    <!-- /row -->
</div>
<!-- /container -->
<!-- /HOT DEAL SECTION -->
<!-- jQuery -->
<script src="~/Scripts/jquery-3.7.1.min.js"></script>

<!-- jQuery for carousel -->
<script>
    $(document).ready(function () {
        // Activate first slide
        $('.carousel-inner .item:first').addClass('active');

        // Enable carousel controls
        $('.carousel-control').click(function (e) {
            e.preventDefault();
            var control = $(this);

            var carousel = control.closest('.carousel');
            var currentSlide = carousel.find('.item.active');
            var nextSlide;

            if (control.hasClass('left')) {
                nextSlide = currentSlide.prev('.item');
                if (nextSlide.length === 0) {
                    nextSlide = carousel.find('.item:last');
                }
            } else {
                nextSlide = currentSlide.next('.item');
                if (nextSlide.length === 0) {
                    nextSlide = carousel.find('.item:first');
                }
            }

            currentSlide.removeClass('active');
            nextSlide.addClass('active');
        });
    });
</script>
