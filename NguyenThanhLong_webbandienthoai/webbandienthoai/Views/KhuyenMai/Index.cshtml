@using webbandienthoai.Models;
@model IEnumerable<KhuyenMai>
@{
    ViewBag.Title = "Khuyen Mai";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
    //khởi tạo control webgrid
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 6);
}
<style>
    .Footer {
        height: 100px;
    }

        .Footer a {
            display: inline-block;
            text-decoration: none;
            border: 2px solid #808080;
            color: #ffffff;
            background: #2987f0;
            padding: 5px 10px;
        }

    .Table, th, tr, td {
        text-align: center;
        border: 1px solid #000000;
        font-size: 16px;
        padding: 5px 10px;
    }

    .Table {
        width: 100%;
    }

    .Header {
        background-color: #e6dada;
    }

    img {
        width: 150px;
        height: 120px;
    }
</style>
<h2 style="margin:10px 0">Khuyến Mãi</h2>
<div class="clearfix"></div>
@Html.ActionLink("Thêm Khuyến Mãi", "ThemKM", null, new { @class = "btn btn-success" })
<br />
<br />
@grid.GetHtml(
    tableStyle: "Table",
    headerStyle: "Header",
    footerStyle: "Footer",
    rowStyle: "Row",
    alternatingRowStyle: "gridAltRow",
    columns: grid.Columns(
    grid.Column("MaKhuyenMai", "Mã Khuyến Mãi"),
    grid.Column("TenKhuyenMai", "Tên Khuyến Mãi"),
    grid.Column("MoTa", "Mô Tả"),
    grid.Column("PhanTramGiamGia", "Phần Trăm"),
    grid.Column("NgayBatDau", "Ngày Bắt Đầu", format: p => p.NgayBatDau.ToString("dd/MM/yyyy")),
    grid.Column("NgayKetThuc", "Ngày Kết Thúc", format: p => p.NgayKetThuc.ToString("dd/MM/yyyy")),
    grid.Column(format: p => Html.ActionLink("Sửa", "Sua", new { MaKhuyenMai = p.MaKhuyenMai }, new { style = "display: block;text-decoration: none;background-color: #0094ff;padding:5px 8px;border:1px solid #00ffff;border-radius:3px 4px;" })),
    grid.Column(format: p => Html.ActionLink("Xóa", "Xoa", new { MaKhuyenMai = p.MaKhuyenMai }, new { style = "display: block;text-decoration: none;background-color: #ff6a00;padding:5px 8px;border:1px solid #ffd800;border-radius:3px 4px;" }))
    )
)