@model webbandienthoai.Models.SanPham

@{
    ViewBag.Title = "Xóa sản phẩm";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<script src="~/Content_Admin/js/tinymce/tinymce.min.js"></script>
<!--
  Note: This tab only shows the initial HTML and is not updated as you type or
  when you click submit.
-->
<script>
    tinymce.init({
        selector: 'textarea#default-editor'
    });
</script>
<style>

    .title2 {
        color: #337ab7;
        padding-bottom: 12px;
        font-size: 20px;
    }
</style>
<h2>Xóa sản phẩm</h2>

<div class="container" style="margin-top:20px">
    @using (Html.BeginForm("XoaSP", "QuanLySanPham", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        <h2 style="display: flex; justify-content: center;"><strong>@Model.TenSP</strong></h2>
        @Html.Hidden("MaSP", Model.MaSP)
        <div class="form-group">
            <label for="MaNCC">Nhà cung cấp</label>
            @Html.DropDownList("MaNCC", null, new { @class = "form-control", @disabled = "disabled" })
        </div>

        <div class="form-group">
            <label for="MaNSX">Nhà sản xuất</label>
            @Html.DropDownList("MaNSX", null, new { @class = "form-control", @disabled = "disabled" })
        </div>

        <div class="form-group">
            <label for="MaLoaiSP">Loại sản phẩm</label>
            @Html.DropDownList("MaLoaiSP", null, new { @class = "form-control", @disabled = "disabled" })
        </div>

        <div class="form-group">
            <label for="TenSP">Tên sản phẩm:</label>
            @Html.TextBoxFor(row => row.TenSP, new { @class = "form-control", @disabled = "disabled" })
        </div>

        <div class="form-group">
            <label for="DonGia">Đơn giá:</label>
            @Html.TextBoxFor(row => row.DonGia, new { @class = "form-control", type = "number", @disabled = "disabled" })
        </div>

        <div class="form-group">
            <label for="NgayCapNhat">Ngày cập nhật:</label>
            @Html.TextBoxFor(row => row.NgayCapNhat, "{0:dd/MM/yyyy}", new { @class = "form-control", @disabled = "disabled" })
        </div>

        <div class="form-group">
            <label for="MoTa">Mô tả sản phẩm:</label>
            <textarea id="default-editor" name="MoTa">@Model.MoTa</textarea>
        </div>

        <div class="form-group">
            <label for="HinhAnh">Hình ảnh 1:</label>
            @Html.TextBoxFor(row => row.HinhAnh, new { @class = "form-control", @disabled = "disabled" })
            <br />
            <img src="@Url.Content("~/Content/Images/Products/" + Model.HinhAnh)" alt="Alternate Text" style="width:100px;height:70px;" />
        </div>

        <div class="form-group">
            <label for="HinhAnh">Hình ảnh 2:</label>
            @Html.TextBoxFor(row => row.HinhAnh2, new { @class = "form-control", @disabled = "disabled" })
            <br />
            <img src="@Url.Content("~/Content/Images/Products/" + Model.HinhAnh2)" alt="Alternate Text" style="width:100px;height:70px;" />
        </div>

        <div class="form-group">
            <label for="HinhAnh">Hình ảnh 3:</label>
            @Html.TextBoxFor(row => row.HinhAnh3, new { @class = "form-control", @disabled = "disabled" })
            <br />
            <img src="@Url.Content("~/Content/Images/Products/" + Model.HinhAnh3)" alt="Alternate Text" style="width:100px;height:70px;" />
        </div>

        <div class="form-group">
            <label for="HinhAnh">Hình ảnh 4:</label>
            @Html.TextBoxFor(row => row.HinhAnh4, new { @class = "form-control", @disabled = "disabled" })
            <br />
            <img src="@Url.Content("~/Content/Images/Products/" + Model.HinhAnh4)" alt="Alternate Text" style="width:100px;height:70px;" />
        </div>
        <div class="form-group">
            <label for="Moi">Mới</label>
            @Html.EditorFor(model => model.Moi, new { @disabled = "disabled" })
        </div>

        <div class="form-group">
            <label for="DaXoa">Đã Xóa</label>
            @Html.EditorFor(model => model.DaXoa, new { @disabled = "disabled" })
        </div>

        <div class="form-group">
            <a href="@Url.Action("Index", "QuanLySanPham")" class="btn btn-danger">Quay lại</a>
            <input type="submit" value="Xóa" class="btn btn-success" />
        </div>
    }
</div>
