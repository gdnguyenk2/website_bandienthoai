@using webbandienthoai.Models;
@model IEnumerable<SanPham>
@{
    ViewBag.Title = "Sản phẩm sắp hết Hàng";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
    //khởi tạo control webgrid
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 6);
}
<style>
    .Footer {
        height: 100px;
    }

        .Footer a {
            display: inline-block;
            text-decoration: none;
            border: 2px solid #808080;
            color: #ffffff;
            background: #2987f0;
            padding: 5px 10px;
        }

    .Table, th, tr, td {
        text-align: center;
        border: 1px solid #000000;
        font-size: 16px;
        padding: 5px 10px;
    }
    .Table {
        min-width: 100%;
        height:auto;
    }

    .Header {
        background-color: #e6dada;
    }

    img {
        width: 150px;
        height: 120px;
    }
</style>
<h2 style="margin:10px 0">Nhập Hàng</h2>
<br />
@grid.GetHtml(
    tableStyle: "Table",
    headerStyle: "Header",
    footerStyle: "Footer",
    rowStyle: "Row",
    alternatingRowStyle: "gridAltRow",
    columns: grid.Columns(
    grid.Column("MaSP", "Mã Sản Phẩm"),
    grid.Column("TenSP", "Tên Sản Phẩm"),
    grid.Column("HinhAnh", "Hình Ảnh", format: p => @Html.Raw("<img src=\"../Content/Images/Products/" + p.HinhAnh + "\">")),
    grid.Column("DonGia", "Đơn Giá", format: p => Html.Raw(p.DonGia.ToString("#,##") + " đ")),
    grid.Column("SoLuongTon", "Số Lượng Tồn"),
    grid.Column(format: p => Html.ActionLink("Nhập Hàng", "NhapHangDon", new { MaSP = p.MaSP }, new { style = "display: block;text-decoration: none;background-color: green;padding:5px 8px;border:1px solid #00ffff;border-radius:3px 4px;" }))
    )
)


