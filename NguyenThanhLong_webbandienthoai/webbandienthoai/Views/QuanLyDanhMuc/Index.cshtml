
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
    //khởi tạo control webgrid
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 6);
}
<style>
    .Footer {
        height: 100px;
    }

        .Footer a {
            display: inline-block;
            text-decoration: none;
            border: 2px solid #808080;
            color: #ffffff;
            background: #2987f0;
            padding: 5px 10px;
        }

    .Table, th, tr, td {
        text-align: center;
        border: 1px solid #000000;
        font-size: 16px;
        padding: 5px 10px;
    }

    .Table {
        width: 100%;
    }

    .Header {
        background-color: #e6dada;
    }

    img {
        width: 160px;
        height: 120px;
    }
</style>

<h2 style="margin:10px 0">Quản Lý Loại Sản Phẩm</h2>
<div class="clearfix"></div>
<br />
@Html.ActionLink("Thêm Loai Sản Phẩm", "ThemLoaiSP", null, new { @class = "btn btn-success" })
<div class="clearfix"></div>
<br />
<br />
@grid.GetHtml(
    tableStyle: "Table",
    headerStyle: "Header",
    footerStyle: "Footer",
    rowStyle: "Row",
    alternatingRowStyle: "gridAltRow",
    columns: grid.Columns(
    grid.Column("MaLoaiSP", "Mã Danh Mục"),
    grid.Column("MaDanhMuc", "Tên Danh Mục",format: p=>Html.Raw(p.DanhMuc.TenDanhMuc)),
    grid.Column("TenLoaiSP", "Tên Loại SP")
)
)
<script>
    $(document).ready(function () {
        var themthanhcong = '@Html.Raw(HttpUtility.JavaScriptStringEncode((string)TempData["themloaisp"]))';// HttpUtility.JavascriptStringEncode để đảm báo mã hóa chuỗi an toàn khi dùng các ký tự đặc biệt
        console.log(themthanhcong);
        if (themthanhcong) {
            alert(themthanhcong);
        }
    });
</script>

